<h1>New Beer</h1>

<p> <%= @notice %></p>

<%= form_for(@beer) do |f| %>
    <div class="form-group row">
        <label for="brewery[id]" class="col-sm-2 col-form-label">brewery:</label>
        <div class="col-sm-10">
            <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s), class:"form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <label for="beer[style]" class="col-sm-2 col-form-label">style:</label>
        <div clas="col-sm-10">
            <%= f.select :style_id, options_from_collection_for_select(@styles, :id, :name), class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">name</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class:"form-control" %>
        </div>
    </div>

    <div class="form-group-row">
        <div class="offset-sm-2 col-sm-10">
            <%= f.submit  "Create Beer", class: "btn btn-primary" %> 
        </div>
    </div>

<% end %>



<%= link_to 'Back', beers_path, class: "btn btn-primary" %>
