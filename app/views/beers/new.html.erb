<h1>New Beer</h1>

<p> <%= @notice %></p>

<%= form_for(@beer) do |f| %>

    brewery: <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s) %>

    style: <%= f.select :style_id, options_from_collection_for_select(@styles, :id, :name)%>

    name: <%= f.text_field :name %>
    

    <%= f.submit %> 

<% end %>



<%= link_to 'Back', beers_path %>
