

<h1>Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to "#{beer.name}", beer_path(beer) %></td>
        <td><%= link_to "#{beer.style.name}", style_path(beer.style)%></td>
        <td><%= link_to "#{beer.brewery.name}", brewery_path(beer.brewery) %></td>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path, class: "btn btn-primary") if current_user  %>
<%= link_to 'All Breweries', breweries_path, class: "btn btn-primary" %>
