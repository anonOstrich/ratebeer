

<% cache @brewery do  %>
<p>
  <strong>Name:</strong>
  <%= @brewery.name %>
  <% if not @brewery.active  %>
    <span class="badge badge-info">retired</span>
  <% end %>
  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary btn-sm" %>
</p>

<p>
  <em>Established in <%= @brewery.year %></em>
</p>

<p>
  Number of beers:
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to "#{beer.name}", beer_path(beer), class: "btn btn-primary"  %>
  <% end %>
<p>

<% if not @brewery.ratings.empty? %>
<p>
  Has  <%= pluralize(@brewery.ratings.count, 'rating')%>, average <%= round @brewery.average_rating %>
</p>
<% end %>

<% end %>


<%= edit_and_destroy_buttons @brewery%>|
<%= link_to 'Back', breweries_path, class: "btn btn-primary" %>
